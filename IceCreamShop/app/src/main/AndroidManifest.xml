<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.minhhn.creamshop" >
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.example.minhhn.IceCreamShop.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.minhhn.IceCreamShop.OrderActivity"
            android:label="@string/title_activity_order" >
        </activity>
        <activity
            android:name="com.example.minhhn.IceCreamShop.ConfirmOrderActivity"
            android:label="@string/title_activity_confirm_order" >
        </activity>
        <activity
            android:name="com.example.minhhn.IceCreamShop.SurveyActivity"
            android:label="@string/title_activity_survey"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.minhhn.IceCreamShop.AfterSurveyActivity"
            android:label="@string/title_activity_after_surver" >
        </activity>
        <activity
            android:name="com.example.minhhn.IceCreamShop.CustomizeActivity"
            android:label="@string/title_activity_customize" >
        </activity>
        <activity
            android:name="com.example.minhhn.IceCreamShop.AfterOrderActivity"
            android:label="@string/title_activity_after_order" >
        </activity>
        <activity
            android:name="com.example.minhhn.IceCreamShop.ScanQRActivity"
            android:label="@string/title_activity_scan_qr" >
        </activity>

    </application>

</manifest>
